    <script>
        // Video player enhancements
        document.addEventListener('DOMContentLoaded', function() {
            const videoElement = document.getElementById('testimonialVideo');
            
            if (videoElement) {
                // Auto-unmute when user interacts with the video
                videoElement.addEventListener('click', function() {
                    if (videoElement.muted) {
                        videoElement.muted = false;
                    }
                });
                
                // Reset video when it ends if not looping
                videoElement.addEventListener('ended', function() {
                    if (!videoElement.loop) {
                        videoElement.currentTime = 0;
                    }
                });
                
                // Add keyboard shortcuts for video control
                document.addEventListener('keydown', function(e) {
                    if (document.activeElement === videoElement || videoElement.contains(document.activeElement)) {
                        // Space bar: play/pause
                        if (e.code === 'Space') {
                            e.preventDefault();
                            if (videoElement.paused) {
                                videoElement.play();
                            } else {
                                videoElement.pause();
                            }
                        }
                        
                        // Up/Down arrows: volume control
                        if (e.code === 'ArrowUp') {
                            e.preventDefault();
                            videoElement.volume = Math.min(1, videoElement.volume + 0.1);
                        }
                        
                        if (e.code === 'ArrowDown') {
                            e.preventDefault();
                            videoElement.volume = Math.max(0, videoElement.volume - 0.1);
                        }
                        
                        // M key: mute/unmute
                        if (e.code === 'KeyM') {
                            e.preventDefault();
                            videoElement.muted = !videoElement.muted;
                        }
                    }
                });
            }
            
            // Immediately activate viewport-visible elements
            function activateElementsInViewport() {
                document.querySelectorAll('.fade-in, .slide-in-left, .slide-in-right, .bounce-in, .stagger-item').forEach((element, index) => {
                    const rect = element.getBoundingClientRect();
                    // If element is in viewport
                    if (rect.top < window.innerHeight && rect.bottom > 0) {
                        // Add a minimal stagger even for initial elements
                        if (element.classList.contains('stagger-item')) {
                            setTimeout(() => {
                                element.classList.add('active');
                            }, index * 50);
                        } else {
                            element.classList.add('active');
                        }
                    }
                });
            }
            
            // Run immediately and on scroll
            activateElementsInViewport();
            window.addEventListener('scroll', activateElementsInViewport, { passive: true });
            
            // Intersection Observer for scroll animations
            const observerOptions = {
                root: null,
                rootMargin: '0px 0px -15% 0px',
                threshold: 0
            };
            
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        // Add active class with minimal delay
                        entry.target.classList.add('active');
                        // Only observe once
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);
            
            // Observe all elements with animation classes
            document.querySelectorAll('.fade-in, .slide-in-left, .slide-in-right, .bounce-in, .stagger-item').forEach((element, index) => {
                // Add a small delay for stagger items based on their index
                if (element.classList.contains('stagger-item')) {
                    if (element.closest('.how-it-works')) {
                        // Special handling for how-it-works cards
                        const cardIndex = Array.from(element.parentNode.children).indexOf(element);
                        element.style.transitionDelay = `${cardIndex * 0.12}s`;
                    } else {
                        element.style.transitionDelay = `${index * 0.05}s`;
                    }
                }
                observer.observe(element);
            });
            
            // Blue sparks animation for mobile
            function createSparksAnimation() {
                // Only run on mobile
                if (window.innerWidth > 576) return;
                
                const heroSection = document.querySelector('.hero');
                if (!heroSection) return;
                
                // Different types of lightning sparks
                const sparkTypes = [
                    'spark-zigzag',  // Zigzag lightning
                    'spark-forked',  // Fork-shaped lightning
                    'spark-star',    // Star-shaped spark
                    ''               // Default (straight bolt)
                ];
                
                // Create a lightning spark at random position
                function createSpark() {
                    const spark = document.createElement('div');
                    spark.className = 'spark';
                    
                    // Apply a random spark type
                    const sparkType = sparkTypes[Math.floor(Math.random() * sparkTypes.length)];
                    if (sparkType) {
                        spark.classList.add(sparkType);
                    }
                    
                    // Random size based on spark type
                    let height, width;
                    
                    if (sparkType === 'spark-star') {
                        // Star shapes are more symmetrical
                        const size = 2 + Math.random() * 4; // Reduced size for less aggressive look
                        height = size;
                        width = size;
                    } else {
                        // Lightning bolts are longer
                        height = 6 + Math.random() * 12; // Reduced max height from 20 to 12
                        width = 1 + Math.random() * 1.5; // Slightly thinner
                    }
                    
                    spark.style.height = `${height}px`;
                    spark.style.width = `${width}px`;
                    
                    // Random position with more distribution
                    // Avoid placing sparks too close to edges
                    const margin = 30;
                    const posX = margin + Math.random() * (heroSection.offsetWidth - 2 * margin);
                    const posY = margin + Math.random() * (heroSection.offsetHeight - 2 * margin);
                    spark.style.left = `${posX}px`;
                    spark.style.top = `${posY}px`;
                    
                    // Random angle for the lightning with more variation
                    const angle = Math.random() * 360;
                    
                    // Apply transformations - scale, rotation, and skew for more organic feel
                    // Using smaller scale values for less aggressiveness
                    const scaleX = 0.7 + Math.random() * 0.4;
                    const scaleY = 0.7 + Math.random() * 0.4;
                    const skewX = Math.random() * 6 - 3; // Reduced skew angle range
                    
                    spark.style.transform = `rotate(${angle}deg) scale(${scaleX}, ${scaleY}) skew(${skewX}deg)`;
                    
                    // Random color variation (blue-white hues for lightning)
                    // Using slightly less saturated colors for subtlety
                    const blueHue = 210 + Math.random() * 30; // Range from 210-240 (blue spectrum)
                    const saturation = 60 + Math.random() * 30; // 60-90% (less saturated)
                    const lightness = 55 + Math.random() * 30; // 55-85% (slightly dimmer)
                    spark.style.background = `hsl(${blueHue}, ${saturation}%, ${lightness}%)`;
                    
                    // Customize glow based on spark type, with reduced intensity
                    const glowIntensity = 1 + Math.random() * 3; // Reduced glow intensity
                    const glowSize = 4 + Math.random() * 10;     // Reduced glow size
                    
                    spark.style.boxShadow = `0 0 ${glowSize}px ${glowIntensity}px hsla(${blueHue}, ${saturation}%, ${lightness}%, 0.6)`; // Reduced opacity from 0.8 to 0.6
                    
                    // Standard animation duration for all types
                    const animDuration = 800;
                    
                    // Append the spark to the hero section
                    heroSection.appendChild(spark);
                    
                    // Remove the spark after animation completes
                    setTimeout(() => {
                        if (spark && spark.parentNode) {
                            spark.parentNode.removeChild(spark);
                        }
                    }, animDuration);
                }
                
                // Create sparks at random intervals
                function sparkLoop() {
                    // Create sparks in clusters or singles with more variation
                    const pattern = Math.random();
                    
                    if (pattern < 0.5) { // Reduced from 0.7 to 0.5 for fewer sparks
                        // 50% chance: create 1-2 sparks (reduced from 1-3)
                        const sparkCount = Math.floor(Math.random() * 2) + 1;
                        
                        for (let i = 0; i < sparkCount; i++) {
                            setTimeout(createSpark, Math.random() * 100);
                        }
                    } else if (pattern < 0.7) { // Reduced from 0.9 to 0.7 for fewer large bursts
                        // 20% chance: create a small burst of 2-4 sparks (reduced from 4-7)
                        const sparkCount = 2 + Math.floor(Math.random() * 3);
                        
                        // Create sparks in a more concentrated area
                        for (let i = 0; i < sparkCount; i++) {
                            setTimeout(createSpark, Math.random() * 150);
                        }
                    } else {
                        // 30% chance: brief pause with no sparks (increased from 10%)
                    }
                    
                    // Schedule next set of sparks with longer delays
                    const nextDelay = pattern < 0.7 ? 
                                    400 + Math.random() * 800 : // Longer normal timing (was 200-700)
                                    1500 + Math.random() * 1000; // Even longer pauses (was 1000-1500)
                    
                    setTimeout(sparkLoop, nextDelay);
                }
                
                // Start the spark animation loop
                sparkLoop();
            }
            
            // Initialize sparks animation
            createSparksAnimation();
            
            // Re-initialize on resize (in case mobile/desktop view changes)
            window.addEventListener('resize', createSparksAnimation, { passive: true });
        });
    </script>
